generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model admin {
  admin_id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email    String @unique @db.VarChar
  password String @db.VarChar
}

model bookinghistory {
  booking_id              String           @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  company_id              String?          @db.Uuid
  first_name              String?          @db.VarChar
  last_name               String?          @db.VarChar
  email                   String?          @db.VarChar
  mobile_number           String?          @db.VarChar
  pickup_sign             String?          @db.VarChar
  flight_number           String?          @db.VarChar
  notes_for_the_chauffeur String?          @db.VarChar
  booking_type            String?          @db.VarChar
  pick_up_location        String?          @db.VarChar
  drop_off_location       String?          @db.VarChar
  duration                String?          @db.VarChar
  date_and_time           DateTime        @db.Timestamptz(6)
  selected_class          String?          @db.VarChar
  payment_method          String?          @db.VarChar
  payment_status          String?          @db.VarChar
  price                   Decimal          @db.Decimal
  reference_code          String?          @db.VarChar
  created_at              DateTime         @default(now()) @db.Timestamptz(6)
  updated_at              DateTime         @default(now()) @db.Timestamptz(6)
  corporateaccount        corporateaccount? @relation(fields: [company_id], references: [company_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_company")
}

model corporateaccount {
  company_id          String           @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  corporate_reference String           @unique @db.VarChar
  corporate_password  String           @db.VarChar
  company_name        String           @db.VarChar
  company_website     String?          @db.VarChar
  company_address     String?          @db.VarChar
  company_email       String           @unique @db.VarChar
  phone_number        String?          @db.VarChar
  billing_address     String?          @db.VarChar
  created_at          DateTime         @default(now()) @db.Timestamptz(6)
  updated_at          DateTime         @default(now()) @db.Timestamptz(6)
  bookinghistory      bookinghistory[]
}

model membership {
  membership_id String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  first_name    String?  @db.VarChar
  last_name     String?  @db.VarChar
  email         String?  @unique @db.VarChar
  phone_number  String?  @db.VarChar
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  updated_at    DateTime @default(now()) @db.Timestamptz(6)
}
